{
  "workDir": ".",
  "dependencies": [],
  "prebuild": [
    {
      "name": "building common-services",
      "actions": [
        {
          "type": "execute",
          "cmd": "cd ../common-services && npm run build"
        },
        {
          "type": "copy",
          "src": "../common-services/build/bundles/commonServices.js",
          "target": "code/scripts/bundles/commonServices.js",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "with-ionic": [
    {
      "name": "PSK bundles",
      "src": "",
      "actions": [
        {
          "type": "copy",
          "src": "./node_modules/@ionic/core/dist/ionic",
          "target": "code/assets/ionic-core",
          "options": {
            "overwrite": false
          }
        },
        {
          "type": "copy",
          "src": "./node_modules/@ionic/core/css",
          "target": "code/assets/ionic-core/css",
          "options": {
            "overwrite": false
          }
        },
        {
          "type": "copy",
          "src": "./node_modules/ionicons/dist/ionicons",
          "target": "code/assets/ionic-core/ionicons",
          "options": {
            "overwrite": false
          }
        },
        {
          "type": "copy",
          "src": "./node_modules/@ionic/pwa-elements/dist/ionicpwaelements",
          "target": "code/assets/ionic-core/pwa-elements",
          "options": {
            "overwrite": false
          }
        }
      ]
    }
  ]
}
